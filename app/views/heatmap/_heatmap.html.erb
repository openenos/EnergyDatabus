  					<td>10:00</td>
  					<td>11:00</td>
  					<td>12:00</td>
  					<td>13:00</td>
  					<td>14:00</td>
  					<td>15:00</td>
  					<td>16:00</td>
  					<td>17:00</td>
  					<td>18:00</td>
  					<td>19:00</td>
  					<td>20:00</td>
  					<td>21:00</td>
  					<td>22:00</td>
  					<td>23:00</td>

  				</tr>
  			</table>
  		</div>
  	</div>


	</div>

  
</div><!-- /. box -->


<script>
$(".table-vertical tr").css("height","77px");
$(".table-vertical tr td").css({"border":"none","padding":"30px"});

$(".table-horizontal tr td").css({"border":"none", "padding":"6px"});

</script>