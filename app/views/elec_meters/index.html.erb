<%- model_class = ElecMeter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:display) %></th>
      <th><%= model_class.human_attribute_name(:meter_type) %></th>
      <th><%= model_class.human_attribute_name(:meter_main) %></th>
      <th><%= model_class.human_attribute_name(:site_id) %></th>
      <th><%= model_class.human_attribute_name(:meter_loc) %></th>
      <th><%= model_class.human_attribute_name(:phase) %></th>
      <th><%= model_class.human_attribute_name(:amp) %></th>
      <th><%= model_class.human_attribute_name(:volt) %></th>
      <!-- <th><%= model_class.human_attribute_name(:created_at) %></th> -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @elec_meters.each do |elec_meter| %>
      <tr>
        <!-- <td><%= elec_meter.id%></td> -->
        <td><%= link_to elec_meter.display, elec_meter_path(elec_meter)  %></td>
        <td><%= elec_meter.meter_type %></td>
        <td><%= elec_meter.meter_main %></td>
        <td><%= elec_meter.site.display %></td>
        <td><%= elec_meter.meter_loc %></td>
        <td><%= elec_meter.phase %></td>
        <td><%= elec_meter.amp %></td>
        <td><%= elec_meter.volt %></td>
        <!-- <td><%=l elec_meter.created_at %></td> -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_elec_meter_path(elec_meter), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      elec_meter_path(elec_meter),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_elec_meter_path,
            :class => 'btn btn-primary' %>
