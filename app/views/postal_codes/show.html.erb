<%- model_class = PostalCode -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:geo_postal_code) %>:</strong></dt>
  <dd><%= @postal_code.geo_postal_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:geo_city) %>:</strong></dt>
  <dd><%= @postal_code.geo_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:geo_state) %>:</strong></dt>
  <dd><%= @postal_code.geo_state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tz) %>:</strong></dt>
  <dd><%= @postal_code.tz %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weather_ref) %>:</strong></dt>
  <dd><%= @postal_code.weather_ref %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              postal_codes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_postal_code_path(@postal_code), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              postal_code_path(@postal_code),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
