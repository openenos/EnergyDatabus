<%- model_class = PostalCode -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:geo_postal_code) %></th>
      <th><%= model_class.human_attribute_name(:geo_city) %></th>
      <th><%= model_class.human_attribute_name(:geo_state) %></th>
      <th><%= model_class.human_attribute_name(:tz) %></th>
      <th><%= model_class.human_attribute_name(:weather_ref) %></th>
      <!-- <th><%= model_class.human_attribute_name(:created_at) %></th> -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @postal_codes.each do |postal_code| %>
      <tr>
        <!-- <td><%= postal_code.id %></td> -->
        <td><%= link_to postal_code.geo_postal_code, postal_code_path(postal_code) %></td>
        <td><%= postal_code.geo_city %></td>
        <td><%= postal_code.geo_state %></td>
        <td><%= postal_code.tz %></td>
        <td><%= postal_code.weather_ref %></td>
        <!-- <td><%=l postal_code.created_at %></td> -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_postal_code_path(postal_code), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      postal_code_path(postal_code),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_postal_code_path,
            :class => 'btn btn-primary' %>
