<%- model_class = Panel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:emon_url) %>:</strong></dt>
  <dd><%= @panel.emon_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:equip_ref) %>:</strong></dt>
  <dd><%= @panel.equip_ref %></dd>
  <dt><strong><%= model_class.human_attribute_name(:panel_type) %>:</strong></dt>
  <dd><%= @panel.panel_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parent_panel_id) %>:</strong></dt>
  <dd><%=  @panel.panel ? @panel.panel.emon_url : "No Parent Panel" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_id) %>:</strong></dt>
  <dd><%=  @panel.site.display %></dd>
  <dt><strong><%= model_class.human_attribute_name(:no_of_circuits) %>:</strong></dt>
  <dd><%= @panel.no_of_circuits || "No Circuits" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amp) %>:</strong></dt>
  <dd><%= @panel.amp %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              panels_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_panel_path(@panel), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              panel_path(@panel),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
