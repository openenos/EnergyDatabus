<%- model_class = Panel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:emon_url) %></th>
      <th><%= model_class.human_attribute_name(:equip_ref) %></th>
      <th><%= model_class.human_attribute_name(:panel_type) %></th>
      <th><%= model_class.human_attribute_name(:parent_panel_id) %></th>
      <th><%= model_class.human_attribute_name(:site_id) %></th>
      <th><%= model_class.human_attribute_name(:no_of_circuits) %></th>
      <th><%= model_class.human_attribute_name(:amp) %></th>
      <!-- <th><%= model_class.human_attribute_name(:created_at) %></th> -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @panels.each do |panel| %>
      <tr>
        <td><%= link_to panel.id, panel_path(panel) %></td>
        <td><%= panel.emon_url %></td>
        <td><%= panel.equip_ref %></td>
        <td><%= panel.panel_type %></td>
        <td><%= panel.parent_panel_id %></td>
        <td><%= panel.site_id %></td>
        <td><%= panel.no_of_circuits %></td>
        <td><%= panel.amp %></td>
        <!-- <td><%=l panel.created_at %></td> -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_panel_path(panel), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      panel_path(panel),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_panel_path,
            :class => 'btn btn-primary' %>
