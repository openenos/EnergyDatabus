<%= form_for @site_group, :html => { :class => "form-horizontal site_group" } do |f| %>

    <% if @site_group.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@site_group.errors.count, "error") %> prohibited this site_group from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @site_group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :display, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :display, :class => 'form-control' %>
    </div>
    <%= error_span(@site_group[:display]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            site_groups_path, :class => 'btn btn-default' %>

<% end %>
