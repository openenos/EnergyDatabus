<%- model_class = Circuit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @circuit.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:input) %>:</strong></dt>
  <dd><%= @circuit.input %></dd>
  <dt><strong><%= model_class.human_attribute_name(:breaker_number) %>:</strong></dt>
  <dd><%= @circuit.breaker_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:double_breaker) %>:</strong></dt>
  <dd><%= @circuit.double_breaker %></dd>
  <dt><strong><%= model_class.human_attribute_name(:breaker_size) %>:</strong></dt>
  <dd><%= @circuit.breaker_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:display) %>:</strong></dt>
  <dd><%= @circuit.display %></dd>
  <dt><strong><%= model_class.human_attribute_name(:elec_load_type_id) %>:</strong></dt>
  <dd><%= @circuit.elec_load_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:panel_id) %>:</strong></dt>
  <dd><%= @circuit.panel_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ct_sensor_type) %>:</strong></dt>
  <dd><%= @circuit.ct_sensor_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:double_ct) %>:</strong></dt>
  <dd><%= @circuit.double_ct %></dd>
  <dt><strong><%= model_class.human_attribute_name(:channel_no) %>:</strong></dt>
  <dd><%= @circuit.channel_no %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              circuits_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_circuit_path(@circuit), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              circuit_path(@circuit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
