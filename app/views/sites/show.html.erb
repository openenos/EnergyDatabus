<%- model_class = Site -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:area_gross_square_foot) %>:</strong></dt>
  <dd><%= @site.area_gross_square_foot %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_ref) %>:</strong></dt>
  <dd><%= @site.site_ref %></dd>
  <dt><strong><%= model_class.human_attribute_name(:display) %>:</strong></dt>
  <dd><%= @site.display %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year_built) %>:</strong></dt>
  <dd><%= @site.year_built %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area_cond_square_foot) %>:</strong></dt>
  <dd><%= @site.area_cond_square_foot %></dd>
  <dt><strong><%= model_class.human_attribute_name(:operating_hours) %>:</strong></dt>
  <dd><%= @site.operating_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_id) %>:</strong></dt>
  <dd><%= @site.location_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sites_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_site_path(@site), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              site_path(@site),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
