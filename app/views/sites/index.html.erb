<%- model_class = Site -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:area_gross_square_foot) %></th>
      <th><%= model_class.human_attribute_name(:site_ref) %></th>
      <th><%= model_class.human_attribute_name(:display) %></th>
      <th><%= model_class.human_attribute_name(:year_built) %></th>
      <th><%= model_class.human_attribute_name(:area_cond_square_foot) %></th>
      <th><%= model_class.human_attribute_name(:operating_hours) %></th>
      <th><%= model_class.human_attribute_name(:location_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= link_to site.id, site_path(site) %></td>
        <td><%= site.area_gross_square_foot %></td>
        <td><%= site.site_ref %></td>
        <td><%= site.display %></td>
        <td><%= site.year_built %></td>
        <td><%= site.area_cond_square_foot %></td>
        <td><%= site.operating_hours %></td>
        <td><%= site.location_id %></td>
        <td><%=l site.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_site_path(site), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      site_path(site),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_site_path,
            :class => 'btn btn-primary' %>
