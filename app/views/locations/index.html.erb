<%- model_class = Location -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:geo_addr) %></th>
      <th><%= model_class.human_attribute_name(:postal_code_id) %></th>
      <th><%= model_class.human_attribute_name(:geo_lat) %></th>
      <th><%= model_class.human_attribute_name(:geo_lng) %></th>
      <th><%= model_class.human_attribute_name(:utility_id) %></th>
      <!-- <th><%= model_class.human_attribute_name(:created_at) %></th> -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <!-- <td><%= location.id %></td> -->
        <td><%= link_to location.geo_addr, location_path(location)%></td>
        <td><%= location.postal_code_id %></td>
        <td><%= location.geo_lat %></td>
        <td><%= location.geo_lng %></td>
        <td><%= location.utility.display %></td>
        <!-- <td><%=l location.created_at %></td> -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_location_path(location), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      location_path(location),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.is_admin %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_location_path,
            :class => 'btn btn-primary' %>

<% end %>            
