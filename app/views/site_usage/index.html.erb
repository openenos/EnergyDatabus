<input type="hidden" name="date" id="current_date" value='<%= Time.now.strftime("%d-%m-%Y")%>'>
<input type="hidden" name="site_ref" id="site_ref" value="<%=  params[:site] %>">
<input type="hidden" id="prev_next" name="prev_next" value="0">
<input type="hidden" id="usage_tab" name="usage_tab" value="day">

<%= render :partial=>"shared/subnavbar" %>
<script type="text/javascript" src="https://www.google.com/jsapi?autoload={'modules':[{'name':'visualization','version':'1.1','packages':['corechart']}]}"></script>
<div ng-app="demoApp">
  <div class="wrapper row-offcanvas row-offcanvas-left" ng-controller="DemoCtrl">

    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side strech">
    <!-- Content Header (Page header) -->
    <section class="content-header">
    <h1>
      <%= @site.display  %>
      <small>Power Usage</small>
    </h1>
    <span id="site" style="display:none"><%= @site.display%></span>
    <span id="current_date" style="display:none"><%= Time.now.strftime("%d-%m-%Y")%></span>
    <ol class="breadcrumb">
      <li><a href="#">Site</a></li>
      <li class="active"><%= @site.display  %></li>
    </ol>
    </section>

    <!-- Main content -->
    <section class="content">

    <!-- Main row -->
    <div class="row">
      <section class="col-lg-12 connectedSortable"> 

      <!-- box-body -->
      <div class="box-body no-padding row-fluid">
        <div class="nav-tabs-custom">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab_1" data-toggle="tab" class="day">Day</a></li>
            <li><a href="#tab_2" data-toggle="tab" class="week">Week</a></li>
            <li><a href="#tab_3" data-toggle="tab" class="month">Month</a></li>
            <li><a href="#tab_4" data-toggle="tab" class="year">Year</a></li>
 

            <li class="pull-right"><a href="#" class="next_date"><i class="fa fa-chevron-right"></i></a></li>
              <li class="pull-right"><a href="#" id="display_date_label" range="day" value="<%= Time.now.strftime('%Y-%m-%d')%>"><%= Time.now.strftime('%d %B %Y')  %></a></li>
              <li class="pull-right"><a href="#" class="prev_date"><i class="fa fa-chevron-left"></i></a></li>


          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab_1"  style="height: 500px;">
              <div class="row spanContent">
                <div class="col-lg-4">                            
                  <label class="day_1"><input type="radio" name="r1" checked="true" value="Demand"> Usage </label>
                  <% unless @site.panels.map(&:circuits).first.where(:is_producing => true).empty? %>
                    <label class="day_1"><input type="radio" name="r1" value="Energy Production"> Production </label>
                    <label class="day_1"><input type="radio" name="r1" value="Both"> Both </label>
                  <% end %>
                </div>
                <div class="col-lg-4">
                  <i class="fa  fa-square" style="color:#3366FF" id="today"><b> Today</b></i> 
                  <i class="fa  fa-square" style="color:#808080" id="yesterday"><b> Yesterday </b></i> 
                  <i class="fa  fa-square" style="color:#FFFFFF" id="p_today"></i> 
                  <i class="fa  fa-square" style="color:#FFFFFF" id="p_yesterday"></i> 
                </div>
                <input type="hidden" name="load_type" value="Demand" id="load_type">
              </div>

              <div class="span12" style="margin-left:0">
                <div id="day-chart" style="height: 450px;">
                </div>
              </div>
            </div><!-- /.tab-pane -->
            <div class="tab-pane" id="tab_2" style="height: 500px;">
              <div class="row spanContent" style="margin-left:40px">
                <div class="col-lg-4">                            
                  <label class="day_2"><input type="radio" name="r2" checked="true" value="usage"> Usage </label>
                  <label class="day_2"><input type="radio" name="r2" value="production"> Production </label>
                  <label class="day_2"><input type="radio" name="r2" value="both"> Both </label>
                </div>
              </div>

              <div class="span12" style="margin-left:0">
                <button id="clearSelection1" class="btn btn-primary btn-tn refresh-btn pull-right" style="z-index:10;position:relative">
                  <i class="fa fa-refresh"></i> Rest Zoom</button>
                <div id="week-chart" style="height: 450px;"></div>
              </div>
            </div><!-- /.tab-pane -->
            <div class="tab-pane" id="tab_3" style="height: 500px;">
              <div class="row spanContent" style="margin-left:40px">
                <div class="col-lg-4">                            
                  <label class="day_3"><input type="radio" name="r3" checked="true" value="usage"> Usage </label>
                  <label class="day_3"><input type="radio" name="r3" value="production"> Production </label>
                  <label class="day_3"><input type="radio" name="r3" value="both"> Both </label>
                </div>
              </div>

              <div class="span12" style="margin-left:0">
                <button id="clearSelection1" class="btn btn-primary btn-tn refresh-btn pull-right" style="z-index:10;position:relative">
                  <i class="fa fa-refresh"></i> Rest Zoom</button>
                <div id="month-chart" style="height: 450px;"></div>
              </div>
            </div><!-- /.tab-pane -->
            <div class="tab-pane" id="tab_4" style="height: 500px;">
              <div class="row spanContent" style="margin-left:40px">
                <div class="col-lg-4">                            
                  <label class="day_4"><input type="radio" name="r4" checked="true" value="usage"> Usage </label>
                  <label class="day_4"><input type="radio" name="r4" value="production"> Production </label>
                  <label class="day_4"><input type="radio" name="r4" value="both"> Both </label>
                </div>
              </div>

              <div class="span12" style="margin-left:0">
                <button id="clearSelection1" class="btn btn-primary btn-tn refresh-btn pull-right" style="z-index:10;position:relative">
                  <i class="fa fa-refresh"></i> Rest Zoom</button>
                <div id="year-chart" style="height: 450px;"></div>
              </div>
            </div><!-- /.tab-pane -->

          </div><!-- /.tab-content -->
        </div>

      </div><!-- /.box-body-->
      <div class="box-footer">
        <button class="btn btn-info"><i class="fa fa-download"></i> Export Data</button>
      </div> 
      </section>


    </div><!-- /.row (main row) -->
    </section><!-- /.content -->
    </aside><!-- /.right-side -->
  </div><!-- ./wrapper -->
</div>

