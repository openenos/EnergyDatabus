<%- model_class = Utility -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:display) %></th>
      <th><%= model_class.human_attribute_name(:utility_type) %></th>
      <th><%= model_class.human_attribute_name(:base_rate) %></th>
      <th><%= model_class.human_attribute_name(:demand) %></th>
      <th><%= model_class.human_attribute_name(:tier1_rate) %></th>
      <th><%= model_class.human_attribute_name(:tier2_rate) %></th>
      <th><%= model_class.human_attribute_name(:tier3_rate) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @utilities.each do |utility| %>
      <tr>
        <td><%= link_to utility.id, utility_path(utility) %></td>
        <td><%= utility.display %></td>
        <td><%= utility.utility_type %></td>
        <td><%= utility.base_rate %></td>
        <td><%= utility.demand %></td>
        <td><%= utility.tier1_rate %></td>
        <td><%= utility.tier2_rate %></td>
        <td><%= utility.tier3_rate %></td>
        <td><%=l utility.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_utility_path(utility), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      utility_path(utility),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_utility_path,
            :class => 'btn btn-primary' %>
