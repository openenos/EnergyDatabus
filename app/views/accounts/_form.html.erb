<%= form_for @account, :html => { :class => "form-horizontal account" } do |f| %>

    <% if @account.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @account.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :company_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :company_name, :class => 'form-control' %>
    </div>
    <%= error_span(@account[:company_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :company_reference, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :company_reference, :class => 'form-control' %>
    </div>
    <%= error_span(@account[:company_reference]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            accounts_path, :class => 'btn btn-default' %>

<% end %>
