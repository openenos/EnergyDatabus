<%= render :partial=>"shared/subnavbar" %>
<div class="wrapper row-offcanvas row-offcanvas-left" ng-controller="SiteCircuitController">
	<aside class="right-side strech">
  	<!-- Content Header (Page header) -->
	  <section class="content-header">
		  <h1> 
		    <%= @site.display  %>
		    <small><%= @circuit.display %></small>
		  </h1>
		  <span id="site" style="display:none"><%= @site.display%></span>
		  <span id="circuit" style="display:none"><%= @circuit.display%></span>
		  <ol class="breadcrumb">
		    <li><a href="#">Site</a></li>
		    <li class="active"><a href='<%= "/site_snapshots/index?site=#{@site.display}"%>'><%= @site.display  %></a></li>
		  </ol>
	  </section>

	  <!-- Main content -->
	  <section class="content">
	  <!-- Main row -->
	  	<div class="row">
	  	</div>

	  </section>
	</aside>

	<aside class="left-side sidebar-offcanvas" style="min-height:725px;top: 134px;width: 200px;">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">

        </ul>
    </section>
    <!-- /.sidebar -->
	</aside>


	<!-- Right side column. Contains the navbar and content of the page -->
  <aside class="right-side" style="margin-left: 180px;">
	 <!-- Main content -->
	  <section class="content">

		  <!-- Main row -->
		  <div class="row">
		  	<section class="col-lg-6 connectedSortable">
		  		<%= render "day_month_year" %>
		  		<%= render "projected" %>
		  	</section>

		  	<section class="col-lg-6 connectedSortable">
		  		<%= render "circuit_demand" %>
		  		<%= render "runtime_information" %>
		  	</section>


		  </div>

		</section>
	</aside>
</div>